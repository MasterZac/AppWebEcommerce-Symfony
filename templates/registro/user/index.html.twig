<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Registro{% endblock %}</title>
        <meta name="description" content=""/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <link rel="shortcut icon" type="image/x-icon" href="{{asset('frontend/images/favicon.svg')}}"/>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('frontend/css/bootstrap.min.css') }}"/>
            <link rel="stylesheet" href="{{asset('frontend/css/registro.css')}}"
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header bg-dark bg-gradient text-white">Registrate</div>
                        <div class="card-body bg-light">
                            {{ form_start(registration_form, {'attr': {'class': 'my-4'}}) }}
                            <div class="form-group">
                                {{ form_row(registration_form.email) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registration_form.nombre) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registration_form.password) }}
                            </div>
                            <div class="form-group"> <!-- Ajustar el espacio inferior -->
                                {{ form_row(registration_form.submit) }}
                            </div>
                            {{ form_end(registration_form) }}
                            <div class="form-group text-center mt-4">
                                <a href="{{ path('app_inicio') }}" class="btn btn-secondary">Ir a Inicio</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% block javascripts %}
        <script src="{{asset('frontend/js/bootstrap.min.js') }}"></script>
    {% endblock %}
    </body>
</html>
