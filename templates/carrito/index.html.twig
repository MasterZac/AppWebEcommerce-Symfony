{% extends 'base.html.twig' %}

{% block title %}{{parent()}}{% endblock %}

{% block body %}
    {{parent()}}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Carrito de Compras</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <script>
                    alert('{{ message|e('js') }}');
                </script>
            {% endfor %}
        {% endfor %}

        {% if items|length > 0 %}
            <div class="row">
                <div class="col-12">
                    <table class="table table-hover text-center">
                        <thead>
                            <tr>
                                <th scope="col">Producto</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Total</th>
                                <th scope="col">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for item in items %}
                                <tr>
                                    <td>{{ item.producto.nombre }}</td>
                                    <td>{{ item.cantidad }}</td>
                                    <td>${{ item.producto.Precio }}</td>
                                    <td>${{ item.producto.Precio * item.cantidad }}</td>
                                    <td>
                                        <form action="{{ path('remove_from_cart', {'id': item.id}) }}" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row mt-4 justify-content-center">
                <div class="col-6 text-center">
                    <h4>Total: ${{ items|reduce((carry, item) => carry + item.producto.Precio * item.cantidad, 0) }}</h4>
                    <div id="paypal-button-container" class="my-4 d-flex justify-content-center"></div>
                    <form action="{{ path('cancel_cart') }}" method="post">
                        <button type="submit" class="btn btn-warning mb-3">Cancelar</button>
                    </form>
                </div>
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                No hay art√≠culos en tu carrito.
            </div>
        {% endif %}
    </div>
    <script src="https://www.paypal.com/sdk/js?client-id=AYfNQDJLFpgGXN_XAQ66GPp77Q_ZcS-isgiuVc83_ikLYoEXncnWuV0ZRsniJcDnnUbbSZA__zz39goM&currency=MXN"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Fetch the total cart amount from the server
        fetch('{{ path('carro_total') }}')
            .then(response => response.json())
            .then(data => {
                const cartTotalAmount = data.total;

                paypal.Buttons({
                    style: {
                        layout: 'vertical',
                        color: 'blue',
                        shape: 'rect',
                        label: 'paypal'
                    },
                    createOrder: function(data, actions) {
                        return actions.order.create({
                            purchase_units: [{
                                amount: {
                                    value: cartTotalAmount.toFixed(2) // Ensure two decimal places
                                }
                            }]
                        });
                    }
                }).render('#paypal-button-container');
            })
            .catch(error => console.error('Error fetching cart total:', error));
    });
    </script>

